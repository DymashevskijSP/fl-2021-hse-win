{
	"name": "automata",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#function"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.abc",
				"match": "\\b(Terminals|Q|q0|delta|Sigma)\\b"
			}]
		},
		"literals": {
			"name": "string.quoted.double.abc",
			"begin": "\"",
			"end": "\"",
			"aliases": ",",
			"patterns": [
				{
					"name": "constant.character.abc",
					"match": "[a-zA-Z0-9_]+"
				}
			]
		},
		"function":{
			"name":"string.quoted.double.abc",
			"begin": "'",
			"end": "'",
			"aliases": ",",
			"patterns": [
				{
					"name": "constant.character.escape.abc",
					"match": "\\([a-zA-Z_0-9]+ *, *[a-zA-Z_0-9]+\\)"
				},
				{
					"name": "constant.character.abc",
					"match": " *-> *\\K[a-zA-Z0-9_]+"
				}
			]
		}
	},
	"scopeName": "source.abc"
}
